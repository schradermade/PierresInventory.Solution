@{
  Layout = "_Layout";
}

@using PierresInventory.Models;
@model List<PierresInventory.Models.Treat>;

  <h1>Treats</h1>

<br>
<hr />

  @if (@Model.Count == 0)
  {
    <h3>No Treats have been added to.....</h3>
  }

  @foreach (Treat Treat in Model)
  {
    <li>@Html.ActionLink($"{Treat.TreatName}", "Details", new { id = Treat.TreatId })</li>
  }

<br>
<hr />
<p><strong>Go To..</strong></p>
  <p>@Html.ActionLink("Add a new Treat", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>