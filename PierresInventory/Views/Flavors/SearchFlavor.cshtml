@{
  Layout = "_Layout";
}

@* @model Library.Models.Flavor; *@

<h1>Treats associated with this Flavor</h1>
@* @Console.WriteLine(Model.JoinEntries) *@

@if(@Model.JoinEntries.Count == 0)
{
  <p>There are no Treats associated with this Flavor.</p>
}
else
{
  <h4>This Flavor is associated with the following Treats:</h4>
  <ul>
  @foreach(var join in Model.JoinEntries) //Model represents the Flavor. join represents rows on the TreatFlavor (Treat and Flavor associations)
  {
    <li>@join.Treat.TreatName</li>
  }
  </ul>
}

<p>@Html.ActionLink("Add new Flavor", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>