@{
  Layout = "_Layout";
}

@model PierresInventory.Models.Flavor

<h4>Add a new Flavor</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.FlavorName)
    @Html.TextBoxFor(model => model.FlavorName)
    
    @Html.Label("Select treat")
    @Html.DropDownList("TreatId")

    <input type="submit" value="Add new Flavor" />
}
<p>@Html.ActionLink("Show all flavors", "Index")</p>
